{{> header}}

<main style="font-family: Arial; padding: 40px;">
  <h1>{{heading}}</h1>

  {{#if destinations}}
    {{#each destinations}}
      <div style="margin-bottom: 24px; border-bottom: 1px solid #ccc; padding-bottom: 16px;">
        <h2>{{name}}</h2>
        <h3>{{location}}</h3>
        <p>{{description}}</p>
        <p><em>ID: {{id}}</em></p>
        <p><strong>Rating:</strong> {{stars rating}} ({{rating}})</p>
        {{#if image}}
          <img src="{{image}}" alt="{{name}}" style="max-width: 300px; display: block; margin-top: 8px;">
        {{/if}}
      </div>
    {{/each}}
  {{else}}
    <p>No destinations found.</p>
  {{/if}}

  <a href="/" style="display:inline-block; margin-top:20px;">Return Home</a>
</main>

